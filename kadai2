<?php
 
  // データベース接続に必要な定数定義
  define('DSN', 'mysql:host=localhost;dbname=co_321_it_99sv_coco_com;charset=utf8');
  define('USER', 'co-321.it.99sv-c');
  define('PASSWORD', '********');
 
  // データベースに接続失敗すると例外が発生するので、try、catchで囲む
  try {
    // データベース接続
    $pdo = new PDO(DSN, USER, PASSWORD);
    echo "データベース接続成功";
    echo '<br>';
  } catch (PDOException $e) {
    // エラーメッセージ表示
    echo "データベース接続失敗：" . $e->getMessage();
    echo '<br>';
    // 処理終了
    exit();
  }
 
?>
